<div class="container">
  <h1 class="mt-5">新規プロジェクト作成</h1>
  <%= form_with model: @project do |f| %>
    <%= render "shared/error_messages", object: @project %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>
    <div class="actions">
      <%= f.submit "作成" %>
    </div>
  <% end %>
  <%= link_to "戻る", :back %>
</div>
